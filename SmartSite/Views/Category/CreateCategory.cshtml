@model SmartSite.Models.Category
@{ ViewBag.Title = "CreateCategory"; }


@using (Html.BeginForm("CreateCategory", "Category", FormMethod.Post))
{<!-- Contact Form -->
                <div class="contact-form-area m-top-30">
                    <h4>Create Category</h4>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 " style="display:flex;justify-content:center;align-items:center">
                            <div class="form-group">
                                @*@Html.LabelFor(c => c.CategoryName)*@
                                <label for="CategoryName">Category Name:</label>
                                @Html.TextBoxFor(c => c.CategoryName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(c => c.CategoryName, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group button">
                                <button type="submit" class="bizwheel-btn theme-2">Create</button>
                            </div>
                        </div>
                    </div>
                </div> <!--/ End contact Form -->}


