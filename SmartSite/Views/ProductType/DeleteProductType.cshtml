@model SmartSite.Models.ProductType
@{ ViewBag.Title = "DeleteProductType"; }


<div class="deletePage">
    <div class="page-part">
        <div class="row d-flex justify-content-center">
            <div class="icon-delete col-12 d-flex justify-content-center">
                <i class="far fa-times-circle"></i>
            </div>
            <div>
                <h2>Are You Sure Delete <a>@Model.Type</a> ?</h2>
                <p>This will cause deleting all products in @Model.Type.</p>
            </div>
        </div>
        @using (Html.BeginForm("DeleteProductType", "ProductType", FormMethod.Post))
        {
                @Html.HiddenFor(m => m.ID)
                <div class="row d-flex justify-content-center">
                    <div class="col-sm-2">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-sm-3">
                        @Html.ActionLink("Cancel", "AllProductTypes", null, new { @class = "btn btn-info form-control" })
                    </div>
                </div>}
    </div>
</div>